<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Number</th>
      <th>Amount</th>
      <th>Status</th>
      <th>Milestone</th>
      <th>Customerpo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.date %></td>
        <td><%= invoice.number %></td>
        <td><%= invoice.amount %></td>
        <td><%= invoice.status.state %></td>
        <td><%= invoice.milestone.milestone_type %></td>
        <td><%= invoice.customerpo.number %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

