<p id="notice"><%= notice %></p>

<h1>Customer Pos</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Number</th>
      <th>Cost center</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_pos.each do |customer_po| %>
      <tr>
        <td><%= customer_po.Date %></td>
        <td><%= customer_po.number %></td>
        <td><%= customer_po.cost_center %></td>
        <td><%= link_to 'Show', customer_po %></td>
        <td><%= link_to 'Edit', edit_customer_po_path(customer_po) %></td>
        <td><%= link_to 'Destroy', customer_po, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

